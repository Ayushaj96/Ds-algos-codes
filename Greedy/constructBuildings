#include <bits/stdc++.h>
using namespace std;
// Recursive
int constructBuilding(int n, string str, int i){
    
    if(i == n-1){
        return 1;
    }
    
    int val = 0;
    if(str[i] == 'B')
        val += constructBuilding(n,str+'S',i+1);
    else{
        val += constructBuilding(n,str+'S',i+1);
        val += constructBuilding(n,str+'B',i+1);
    }
    return val;
}

int main() {
	// your code goes here
	int n;
	cin>>n;
	
	string str = "";
	str += 'S';
	int count = constructBuilding(n,str,0);
	str[0] = 'B';
	count += constructBuilding(n,str,0);
	cout<<count;
	return 0;
}


