#include<iostream>
using namespace std;

int main() {
	//code
	int T;
	cin>>T;
	
	while(T--){
	    int n;
	    cin>>n;
	    
	    int arr[n];
	    for(int i = 0; i < n; i++)
	        cin>>arr[i];
	   
	    int inc = arr[0], exc = 0, temp = 0;
	    for(int i = 1; i < n; i++){
	        temp = exc;
	        exc = max(exc,inc);
	        inc = temp + arr[i];
	    }
	    
	    cout<<max(inc,exc)<<endl;
	}
	return 0;
}
